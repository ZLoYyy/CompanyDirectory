<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:CompanyDirectory.ViewModels"
                    xmlns:v="clr-namespace:CompanyDirectory.Views">
    
    <DataTemplate DataType="{x:Type vm:MonitorViewModel}">
        <v:MonitorView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ReportManageViewModel}">
        <v:ReportManageView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SprCompanyViewModel}">
        <v:SprCompanyViev DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SprDivisionViewModel}">
        <v:SprDivisionView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SprEmployeeViewModel}">
        <v:SprEmployeeView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SprPostViewModel}">
        <v:SprPostView DataContext="{Binding}"/>
    </DataTemplate>

</ResourceDictionary>